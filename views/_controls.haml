#controls.clearfix
  .active
    - if itunes.player_state == :playing
      .pause= link_to 'pause', :do => :pause
    - else
      .play= link_to 'play', :do => :play

  .volume.clearfix
    #volume_slider.ui-slider
      .ui-slider-range
        %a#volume_handle.ui-slider-handle
      %input#volume_value{:type => 'hidden', :value => itunes.current_volume}

  .muting  
    - if itunes.muted?
      .muted= link_to 'ON', :do => :unmute
      %h4 Mute ON
    - else
      .unmuted= link_to 'OFF', :do => :mute    
      %h4 Mute OFF
  .playlist_clear
    .cleared= link_to '[clear]', :do => :clear    
    %h4 Clear Playlist

 

      