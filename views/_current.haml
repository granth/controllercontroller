%fieldset#current
  %legend Now Playing
  - if !itunes.playlist_empty?
    .title
      Title:
      = itunes.current_track.title
    .artist
      Artist:
      = itunes.current_track.artist
    .album
      Album:
      = itunes.current_track.album
    .duration
      == #{itunes.time_left_in_current_track}/#{itunes.current_track.time}
  - else
    Nothin'!